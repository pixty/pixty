{
     "parser": "babel-eslint",
     "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "js": true
        }
    },
    "plugins": ["react", "flow"],
    "rules": {
        "semi": 2
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        }
    }
}

